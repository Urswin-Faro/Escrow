# JWT
JWT_SECRET=your_very_secure_jwt_secret

# Postgres connection (used by db.js / Pool)
# Either set a single DATABASE_URL OR set components below.
# Example DATABASE_URL format:
# postgres://dbuser:dbpass@localhost:5432/escrow_db
DATABASE_URL=postgres://root:Ursw!nF@r0@localhost:5432/escrow_db

# --- OR (if you prefer components instead of DATABASE_URL) ---
DB_USER=root
DB_HOST=localhost
DB_NAME=escrow_db
DB_PASSWORD=Ursw!nF@r0
DB_PORT=5432

# OTP / Email settings
USE_EMAIL=false               # keep false during local dev; true to send real emails
OTP_TTL_SECONDS=60            # OTP valid time in seconds (60 by default)

# If USE_EMAIL=true (production), set SMTP values:
EMAIL_HOST=smtp.yourprovider.com
EMAIL_PORT=587
EMAIL_SECURE=false            # false for 587, true for 465
EMAIL_USER=your_smtp_user
EMAIL_PASS=your_smtp_password
EMAIL_FROM="Escrow App <no-reply@yourapp.com>"
